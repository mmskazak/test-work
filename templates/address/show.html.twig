{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
    <h1>Address</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ address.street }}</td>
            </tr>
            <tr>
                <th>House</th>
                <td>{{ address.house }}</td>
            </tr>
            <tr>
                <th>Appartment</th>
                <td>{{ address.appartment }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ address.client.name }}</td>
            </tr>
            <tr>
                <th>City</th>
